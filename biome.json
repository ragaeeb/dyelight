{
    "$schema": "https://biomejs.dev/schemas/latest/schema.json",
    "extends": ["biome:recommended"],
    "files": {
        "ignore": ["dist", "node_modules"]
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space"
    },
    "linter": {
        "rules": {
            "recommended": true
        }
    },
    "organizeImports": {
        "enabled": true
    }
}
